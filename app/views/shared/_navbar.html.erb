	  <ul id="nav">
		<li id="search" style="display:none;">  
		<% form_tag search_pages_url, :method => 'get' do -%>
	       <%= text_field_tag :query, params[:query], :size => 15, :id => :search_box -%>
	    <% end -%>
		</li>
		<li><%= link_to_function "search", "$('search').toggle(); $('search_box').focus();" %></li>
		<% if logged_in? -%>
			<% if current_user.admin? -%>
			<li><%= link_to "settings", site_path %></li>
			<% end -%>
			<li><%= link_to "logout", logout_path %></li>
		<% else -%>
			<li><%= link_to "login", login_path %></li>
			<li><%= link_to "signup", new_user_path %></li>
		<% end -%>
		<li><%= link_to "users", users_path %></li>
	  </ul>